<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="POKEMON"
             x:Class="Xamarin.PokemonPage">
    <ContentPage.Content>
        <StackLayout Padding="20"
                     BackgroundColor="Azure">
            <Label Text="Enter Pokemon Number"/>
            <Entry x:Name="entryNumber"
                   Placeholder="Number"
                   Keyboard="Numeric"
                   ClearButtonVisibility="WhileEditing"/>
            <Button x:Name="btnFind"
                    Text="FIND POKEMON"
                    Clicked="btnFind_Clicked"/>
            <Label x:Name="lblName"
                   Text="..."
                   FontSize="20"
                   HorizontalOptions="Center"/>
            <Image x:Name="imgPokemon"
                   Aspect="AspectFit"
                   HorizontalOptions="Center"
                   WidthRequest="180"
                   HeightRequest="180"
                   BackgroundColor="LightGray"/>
            <Button x:Name="btnInfo"
                    Text="VIEW INFO"
                    Clicked="btnInfo_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>